[user]
  email = jcartledge@gmail.com
  name = James Cartledge

[core]
	excludesfile = /Users/jcartledge/.gitignore_global
	pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[push]
  default = current

[pull]
  default = current
	rebase = true

[init]
	templatedir = /Users/jcartledge/.git-template
	defaultBranch = main

[url "https://"]
	insteadOf = git://
